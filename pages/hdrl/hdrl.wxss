/* pages/hdrl/hdrl.wxss */
page{
  background-color: #FFFACD;
  font-family:cursive;
}
.main-bg{
  position:absolute;
  top:0;
  left:0;
  z-index:-1;
  height:100%;
  width:100%;
}
.title{
  font-size: 40rpx;
  font-weight: bold;
  color:darkblue;
  margin: 10px;
  text-indent:2em;
}
.m-compassbg{
  width: 260px;
  height: 260px;
  border-radius: 50%;
}
.jiantouStyle{
  width: 90px;
  height: 90px;
  margin-bottom: 15rpx;
  margin-top: 15rpx;
}
.compassStyle{
  font-size:50rpx;
  margin-top:50rpx;
  color:snow;
  font-weight: bold;
}
.lable{
  margin-top: 20rpx;
  font-size: 30rpx;
  color: darkred;
}

/**app.wxss**/
.box {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 20rpx 35rpx 20rpx;
  box-sizing: border-box;
  position:relative;
  font-weight: bold;
} 

.content{
  font-size: 15px;
  color:seagreen;
  align-self: start;
  margin-left: 20px;
  margin-right: 10px;
}
.date-year-month{
  padding: 5px;
  text-align: center;
}
.date-year-month text{
  border-bottom:1px solid #333;
  
}
.year-month{
  padding-right:15px;
  font-weight: bold;
  font-size: 35rpx;
}
.grid {
  margin-top:50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;

}

.col {
  width: 50%;
  align-items: center;
  justify-content: space-between;
}
.colabel {
  font-size: 38rpx;
  font-weight: bold;
  color:greenyellow;
  width: 120rpx;
  text-align: left;
  flex: none;
  text-indent: 5rpx;
  line-height: 65rpx;
}
.jlable{
  margin-top: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color:yellow;
}
.xlable{
  margin-top: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color:lime;
}
li {
  list-style: none;
  float: left;
  /* width: 25%; */
  /* height: 32rpx; */
  line-height: 50rpx;
  white-space: nowrap;
  text-align:center;
}